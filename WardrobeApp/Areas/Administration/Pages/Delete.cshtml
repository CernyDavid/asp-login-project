@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="header-box mb-4">
        <h1>Delete</h1>
    </div>
    <p>Are you sure you want to delete this?</p>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUser.Nick)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.Nick)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUser.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.Gender)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUser.DateOfCreation)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.DateOfCreation)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUser.UserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.UserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUser.NormalizedUserName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.NormalizedUserName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUser.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AppUser.NormalizedEmail)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AppUser.NormalizedEmail)
            </dd>
        </dl>
    
        <form method="post">
            <input type="hidden" asp-for="AppUser.Id" />
            <input type="submit" value="Delete" class="btn btn-primary mt-3 mb-1" />
        </form>
        <a asp-page="./Dashboard">Back to List</a>
    </div>
</div>
