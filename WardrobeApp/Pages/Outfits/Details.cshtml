@page
@model WardrobeApp.Pages.Outfits.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Outfit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Outfit.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Outfit.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Outfit.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Outfit.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Outfit.Headwear)
        </dt>
        <dd class="col-sm-10">
            <img src="data:image;base64,@(Convert.ToBase64String(Model.Outfit.Headwear.Image))" alt="Clothing Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Outfit.Top)
        </dt>
        <dd class="col-sm-10">
            <img src="data:image;base64,@(Convert.ToBase64String(Model.Outfit.Top.Image))" alt="Clothing Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Outfit.Bottom)
        </dt>
        <dd class="col-sm-10">
            <img src="data:image;base64,@(Convert.ToBase64String(Model.Outfit.Bottom.Image))" alt="Clothing Image" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Outfit.Footwear)
        </dt>
        <dd class="col-sm-10">
            <img src="data:image;base64,@(Convert.ToBase64String(Model.Outfit.Footwear.Image))" alt="Clothing Image" />
        </dd>
    </dl>
</div>
