@model WardrobeApp.Pages.Outfits.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Outfit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Outfit.Name" class="control-label"></label>
                <input asp-for="Outfit.Name" class="form-control" />
