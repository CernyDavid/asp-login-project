@page
@model WardrobeApp.Pages.ClothingItemCRUD.CreateModel
@using WardrobeApp.Models

@{
    ViewData["Title"] = "Create";
}

<div class="main-page-container">
    <div class="page-header">
        <h1>Add Item</h1>
        <p>Add new clothing item</p>
    </div>
    <div>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" />
                <span class="validation" asp-validation-for="Input.Name"></span>
            </div>
            <div>
                <label asp-for="Input.Type"></label>
                @foreach (var t in Enum.GetValues(typeof(ClothingType)))
                {
                    <div class="radiobutton-input">
                        @Html.RadioButtonFor(model => model.Input.Type, t) @t<br />
                    </div>
                }
                <span class="validation" asp-validation-for="Input.Type"></span>
            </div>
            <div>
                <label asp-for="Input.Image"></label>
                <input asp-for="Input.Image" type="file"/>
                <span class="validation" asp-validation-for="Input.Image"></span>
            </div>
            <div class="button-container">
                <button type="submit" value="Create" class="button button--primary">Create</button>
                <a class="button button--secondary" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
