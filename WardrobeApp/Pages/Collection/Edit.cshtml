@page
@model WardrobeApp.Pages.ClothingItemCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="main-page-container">
    <div class="page-header">
        <h1>Rename</h1>
    </div>
    <div>
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="ClothingItem.Id" />
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" />
                <span asp-validation-for="Name"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="button-container">
                <button type="submit" value="Edit" class="button button--primary">Rename</button>
                <a class="button button--secondary" asp-page="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
